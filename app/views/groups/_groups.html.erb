<li>
  <span class="topic"><%= group.topic %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(group.created_at) %> ago.
  </span>
	<% if current_user?(group.user) %>
    <%= link_to "delete", group, method: :delete, data: { confirm: "You sure?" }, title: group.content %>
  <% end %>
</li>