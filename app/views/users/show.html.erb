<% provide(:title, @user.name) %>
  <div class="row-fluid">
    <section class="span4 offset1">
      <h1>
        <%= @user.name %>
      </h1>
      <%= link_to 'Edit', edit_user_path(@user) %> |
      <%= link_to 'All users', users_path %>
    </section>
    <% unless @group.nil? %>
      <section class="span4 offset1">
        <%= render 'shared/group_form' %>
      </section>
    <% end %>
  </div>
  <div class="row-fluid">
    <section class="span11 offset1">
      <% if @user.groups.any? %>
        <h3>Meetup groups 
        <% if @group.nil? %>
          <%= @user.name %> 
        <% else%>
          I
        <%end%>
        administer(<%= @user.groups.count %>):</h3>
          <div class="row-fluid">
            <div class="span4">
              <b>Topic</b>
            </div>
            <div class="span2 offset1">
              <b>Home Town</b>
            </div>
          </div>
          <% @groups.each do |g| %>
            <div class="row-fluid">
              <div class="span4">
                <%= g.topic%>
              </div>
              <div class="span2 offset1">
                <%= g.home_town %>
              </div>
              <% unless @group.nil? %>
                <div class="span1 offset1">
                  <%= link_to 'Edit', edit_group_path(g) %>
                </div>
              <%end%>
            </div>
          <%end%>
      <% end %>
    </section>
  </div>


